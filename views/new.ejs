<%- include('partials/header');  -%>

  <main>
    <div class="add-new-product">
      <h2 class="h1">Add New Product</h2>
      <form action="/product/new" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="code" id="code" placeholder="Product Code">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="descriptionProduct" id="descriptionProduct" placeholder="Product Description">
        </div>
        <div class="form-group">
          <input type="number" class="form-control" name="price" id="price" placeholder="Product price">
        </div>
        <button type="submit" class="btn btn-primary">Add to Database</button>
      </form>
   </div>